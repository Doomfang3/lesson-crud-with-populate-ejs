<%#>!-- posts/details.hbs --%>

<h2><%= title %></h2>
<div>
  <%= content %>
  <br />
  - by <%= author.username %> ♥️
</div>

<% if (comments) { %> <% comments.forEach(({ author, content }) => { %>
<p><b><%= author.username %>:</b> <%= content %></p>
<% }) %> <% } else { %>
<p>No comments yet!</p>
<% } %>

<hr />

<h3>Add comment</h3>

<form action="/posts/<%= _id %>/comment" method="POST">
  <label>
    Your username:
    <input type="text" name="author" />
  </label>

  <input type="text" name="postAuthor" value="<%= author.username %>" hidden />
  <textarea name="content" cols="30" rows="2"></textarea>

  <button type="submit">Comment</button>
</form>

<br />
<a href="/users/<%= author._id %>/posts">See all <%= author.username %>'s posts </a>
